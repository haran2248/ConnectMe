<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"

    xmlns:app="http://schemas.android.com/apk/res-auto">

    <LinearLayout
        android:layout_width="match_parent"
        android:backgroundTint="#F7ECDB"
        android:background="@drawable/nameofxml"
        android:orientation="vertical"
        android:layout_margin="10dp"

        android:layout_height="wrap_content">

    <de.hdodenhof.circleimageview.CircleImageView
        android:id="@+id/display_pic"
        android:layout_width="150dp"
        android:layout_height="150dp"
        app:civ_border_color="#FFEB3B"
        app:civ_border_width="2dp"
        android:layout_marginTop="0dp"
        android:src="@drawable/no_profile_pic"
        android:transitionName="imageTrans"
        android:layout_marginLeft="120dp"
        android:rotation="0"/>

        <TextView
            android:id="@+id/profile_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="40dp"
            android:layout_marginTop="5dp"
            android:layout_toRightOf="@+id/display_pic"
            android:fontFamily="@font/roboto_regular"
            android:paddingBottom="10dp"
            android:text="Name"
            android:textColor="#121211"
            android:textSize="30dp"
            android:transitionName="NameTrans" />

        <TextView
            android:id="@+id/profile_year"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/profile_name"
            android:layout_marginLeft="40dp"
            android:layout_toRightOf="@+id/display_pic"
            android:fontFamily="@font/gotham_reg"
            android:text="year"
            android:paddingBottom="10dp"
            android:transitionName="YearTrans"
            android:textColor="#0E0E0E"
            android:textSize="25dp" />
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Branch"
        android:paddingBottom="10dp"
        android:layout_below="@id/profile_year"
        android:layout_marginLeft="40dp"
        android:layout_toRightOf="@+id/display_pic"
        android:textSize="20dp"
        android:transitionName="branchtrans"
        android:fontFamily="@font/gotham_reg"
        android:textColor="#191918"
        android:id="@+id/Branch"
        />
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Email"
            android:layout_below="@id/profile_year"
            android:layout_marginLeft="40dp"
            android:layout_toRightOf="@+id/display_pic"
            android:textSize="20dp"
            android:paddingBottom="10dp"
            android:fontFamily="@font/gotham_reg"
            android:transitionName="EmailTrans"
            android:textColor="#1C1C1C"
            android:id="@+id/Email"
            />



<!--    <com.google.android.material.button.MaterialButton-->
<!--        android:layout_width="150dp"-->
<!--        android:layout_height="wrap_content"-->
<!--        android:layout_marginLeft="120dp"-->
<!--        android:layout_marginTop="10dp"-->
<!--        app:cornerRadius="20dp"-->
<!--        android:background="@color/colorAccent"-->
<!--        android:backgroundTint="#F85B5B"-->
